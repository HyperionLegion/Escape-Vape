<!DOCTYPE html>
<html lang="en">
	<head>
	<title>Escape Vape</title>
	<link
      href="/bower_components/bootstrap/dist/css/bootstrap.css"
      rel="stylesheet"
    />
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ho+j7jyWK8fNQe+A12Hb8AhRq26LrZ/JpcUGGOn+Y7RsweNrtN/tE3MoK7ZeZDyx"
      crossorigin="anonymous"
    ></script>
    <link href="/css/style.css" rel="stylesheet" />
	<link rel="icon" type="image/png" href="/images/escapevape.png" />
	</head>
	<body>
		<nav class="navbar navbar-expand-md navbar-dark bg-dark">
		  <a class="navbar-brand" href="/">EscapeVape</a>
		  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsExample04" aria-controls="navbarsExample04" aria-expanded="false" aria-label="Toggle navigation">
		    <span class="navbar-toggler-icon"></span>
		  </button>

		  <div class="collapse navbar-collapse" id="navbarsExample04">
		    <ul class="navbar-nav mr-auto">
		      <li class="nav-item">
		        <a class="nav-link" href="/">Home <span class="sr-only">(current)</span></a>
		      </li>
		      <%if(typeof user!= 'undefined'){%>
		      <li class="nav-item">
		      	<a class = "nav-link" href="/users/log">Your Log</a></li>
		      	</li>
		      	<li class="nav-item">
		      	<a class="nav-link" href="/lifeline">Lifeline</a></li>
		      	<li class="nav-item">
            <a class="nav-link" href="/therapy">Therapy</a></li>
            <a class="nav-link" href="/rooms/">Video Call</a></li>
		      <%}%>
		  	</ul>
		  	<ul class="navbar-nav navbar-right">
		      <%if (typeof user != 'undefined'){%>
		      	<li class="nav-item active">
		      	<a class="nav-link" href="/users/account">Settings</a></li>
		      	<li class="nav-item">
		      	<a class = "nav-link" href="/users/logout">Logout</a></li>
		      <%}else{%>
		      <li class="nav-item">
		        <a class="nav-link " href="/users/register">Register</a>
		      </li>
		     <li class="nav-item">
		        <a class="nav-link" href="/users/login">Login</a>
		      </li>
		      <%}%>
		    </ul>
		  </div>
		</nav>
		<div class="container">
		<%- messages('message', locals) %>
		<% if(typeof errors != 'undefined'){%>
			<% errors.forEach(function (i) { %>
		    <div class="alert alert-danger"><%= i.msg %></div>
		  	<% }) %>
		<%}%>
  <form method="POST" class="card2 update" action="/users/account">
	<h1>Update Account</h1>
    <div id="form-group">
      <label><span class="h4">Username:</span> (choose an anonymous username if you wish to be completely anonymous)</label>
      <input class="form-control" name="username" type="text" />
    </div>
    <div id="form-group">
      <label class="h4">Password:</label>
      <input class="form-control" name="password" type="password" />
    </div>
    <div id="form-group">
      <label class="h4">Confirm Password:</label>
      <input class="form-control" name="password2" type="password" />
    </div><br />
	<input class="btn btn-primary submit" type="submit" value="Submit" />
  </form>
  <br>
  <div class="card2 button">
	<h2>Daily Email Motivation: </h2>
  <form method="POST" action="/users/notifs">
    <input class="btn btn-primary" type="submit" value="Enable/Disable Daily Email" />
  </form>
  </div>
</body>
</html>
