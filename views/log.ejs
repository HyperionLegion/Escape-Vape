<!DOCTYPE html>
<html lang="en">
	<head>
	<title>Escape Vape</title>
	<link href="/css/style.css" rel="stylesheet">
	<link href="/bower_components/bootstrap/dist/css/bootstrap.css" rel="stylesheet">
	<script src="/bower_components/bootstrap/dist/js/bootstrap.js"></script>
	<script src="/bower_components/jquery/dist/jquery.js"></script>
	</head>
	<body>
		<nav class="navbar navbar-expand-md navbar-dark bg-dark">
		  <a class="navbar-brand" href="/">EscapeVape</a>
		  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsExample04" aria-controls="navbarsExample04" aria-expanded="false" aria-label="Toggle navigation">
		    <span class="navbar-toggler-icon"></span>
		  </button>

		  <div class="collapse navbar-collapse" id="navbarsExample04">
		    <ul class="navbar-nav mr-auto">
		      <li class="nav-item">
		        <a class="nav-link" href="/">Home <span class="sr-only">(current)</span></a>
		      </li>
		      <%if(typeof user!= 'undefined'){%>
		      <li class="nav-item active">
		      	<a class = "nav-link" href="/users/log">Your Log</a></li>
		      	<li class="nav-item">
            <a class="nav-link" href="/rooms/">Video Call</a></li>
		      <%}%>
		  	</ul>
		  	<ul class="navbar-nav navbar-right">
		      <%if (typeof user != 'undefined'){%>
		      	<li class="nav-item">
		      	<a class = "nav-link" href="/users/logout">Logout</a></li>
		      <%}else{%>
		      <li class="nav-item">
		        <a class="nav-link " href="/users/register">Register</a>
		      </li>
		     <li class="nav-item">
		        <a class="nav-link" href="/users/login">Login</a>
		      </li>
		      <%}%>
		    </ul>
		  </div>
		</nav>
		<div class="container">
		<h1>Your Log</h1>
		<h2><%=log.days%> days since last vape</h2>
		<h2><%=log.date%> last vape date</h2>
		<h2>Log Entries:<h2>
		<ul>
			<%log.logs.forEach(function(logEntry){%>
			<li class="list-group-item">
				<h4>Date: <%=logEntry.date%></h2>
				<h4>Log: <%=logEntry.body%></h2>
			</li>
		<%})%>
  		</ul>
		</div>
</body>
</html>
